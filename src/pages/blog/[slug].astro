---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar';
import Footer from '../../components/Footer';
import { ArrowLeft, Calendar, User } from 'lucide-react';

import { blogPosts } from '../../data';

export function getStaticPaths() {
  return Object.keys(blogPosts).map(slug => ({
    params: { slug },
  }));
}

const { slug } = Astro.params;
const post = blogPosts[slug as keyof typeof blogPosts];

if (!post) {
  return Astro.redirect('/404');
}

function formatDate(dateString: string) {
  return new Date(dateString).toLocaleDateString('fr-FR', {
    day: 'numeric',
    month: 'long',
    year: 'numeric'
  });
}
---

<Layout title={`${post.title} | Dimitri Helie - Blog`}>
  <Navbar client:load />
  
  <main class="pt-24 pb-16">
    {/* Hero */}
    <section class="relative h-64 md:h-80 overflow-hidden">
      <img 
        src={post.image} 
        alt={post.title}
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-linear-to-t from-slate-900/80 to-slate-900/20"></div>
      <div class="absolute bottom-0 left-0 right-0 p-6 md:p-10">
        <div class="container mx-auto">
          <div class="max-w-3xl">
            <a href="/blog" class="inline-flex items-center gap-2 text-white/80 hover:text-white mb-4 transition-colors">
              <ArrowLeft size={18} /> Retour au blog
            </a>
            <div class="flex items-center gap-3 mb-3">
              <span class="px-3 py-1 bg-brand text-white text-xs font-semibold rounded-full">
                {post.category}
              </span>
              <span class="text-white/70 text-sm flex items-center gap-1">
                <Calendar size={14} /> {formatDate(post.date)}
              </span>
            </div>
            <h1 class="font-display text-2xl md:text-4xl font-bold text-white">
              {post.title}
            </h1>
          </div>
        </div>
      </div>
    </section>

    {/* Content */}
    <section class="py-12">
      <div class="container mx-auto px-6">
        <div class="max-w-3xl mx-auto">
          {/* Author */}
          <div class="flex items-center gap-3 mb-8 pb-8 border-b border-slate-100">
            <div class="w-10 h-10 bg-brand-lighter rounded-full flex items-center justify-center">
              <User className="text-brand" size={20} />
            </div>
            <div>
              <p class="font-semibold text-slate-800">{post.author}</p>
              <p class="text-sm text-slate-500">Préparateur Mental</p>
            </div>
          </div>

          {/* Article Content */}
          <article class="prose prose-lg prose-slate max-w-none prose-headings:font-display prose-headings:text-slate-800 prose-h2:text-2xl prose-h2:mt-10 prose-h2:mb-4 prose-h3:text-xl prose-h3:mt-6 prose-h3:mb-3 prose-p:text-slate-600 prose-a:text-brand prose-a:no-underline hover:prose-a:underline prose-strong:text-slate-800 prose-ul:text-slate-600 prose-li:marker:text-brand">
            <Fragment set:html={post.content} />
          </article>

          {/* CTA */}
          <div class="mt-12 p-8 bg-brand-lighter/50 rounded-2xl border border-brand/10">
            <h3 class="font-display text-xl font-bold text-slate-800 mb-3">
              Vous souhaitez aller plus loin ?
            </h3>
            <p class="text-slate-600 mb-6">
              Prenez rendez-vous pour un premier échange et découvrez comment la préparation mentale peut vous aider à atteindre vos objectifs.
            </p>
            <a 
              href="https://calendly.com/" 
              target="_blank"
              class="inline-flex items-center gap-2 bg-brand text-white px-6 py-3 rounded-xl font-semibold hover:bg-brand-dark transition-colors"
            >
              Prendre RDV
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer client:load />
</Layout>